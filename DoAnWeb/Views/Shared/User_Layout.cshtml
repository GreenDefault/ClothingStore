        }

        li {
            list-style: none;
        }

        .menu-li {
            font-size: 16px;
            margin-top: 22px;
        }
            .menu-li.active {
               color: red;
            }    
            a {
                color: white;
                margin: 10px 0px;
                padding: 15px 17px;
            }

            a:hover {
                color: lightgray;
                text-decoration: none;
            }

        input#search {
            margin-top: 26px;
            width: 390px;
            height: 30px;
            flex: 1;
            border: none;
            outline: none;
            font-size: 15px;
            color: black;
        }
        .box_search {
            background-color: #fff;
            border-radius: 30px;
            width: 478px;
            height: 35px;
            display: flex;
            align-items: center;
            padding: 0 15px;
            margin: 4px 100px;
        }

        .li-search {
            margin-top: 11px;
        }

        #btn-menu {
            display: none;
        }

        /* header_textnav */

        .header_textnav {
            color: white;
            width: 700px;
            height: 50px;
            padding: 280px 80px;
        }

        h3.Text_Nav {
            font-size: 40px;
            text-transform: capitalize;
        }

        .Text_Nav {
            color: white;
        }

        .user_login {
            position: absolute;
            display: none;
            width: 220px;
            height: 110px;
            background: #5b7eff;
            margin: 10px 20px;
        }

        .btn_login {
            margin: 18px 5px;
        }

        .menu-li:hover .user_login {
            display: block;
        }

        .row.row_product {
            margin: 20px 25px;
        }

        .btn_login a {
            font-size: 15px;
        }


        element.style {
        }

        #btnsearch {
            border: none;
            background: white;
            width: 25px;
            height: 25px;
            margin-top: 29px;
        }

        form#mg3 {
            display: flex;
        }
    </style>
    <script>
        $(document).ready(function () {
            $('input#search').keyup(function (event) {
                if (event.which === 13) {
                    event.preventDefault();
                    $('form#mg3').submit();
                }
            });
        });
    </script>
</head>

<body>

    <!--Header-->

    <div class="header">

        <!--Nav-->

        <div class="nav">
            <div class="logo">
                <a href="~/Home/Index">
                    <i style="font-family:'Colonna MT';font-size:55px; color:white;">DN</i> <i style="font-family:'VNI 24 Love';font-size:40px; color:white;">Shop</i>
                </a>
            </div>

            <div id="nav">
                <button type="button" id="btn-menu">Menu</button>
                <ul class="menu">

                    <li class="menu-li li-search">
                        <div class="box_search">
                            @using (Html.BeginForm("Index", "AnSPnSL", FormMethod.Post, new { id = "mg3" }))
                            {
                                <input id="search" type="text" name="KeyWord" placeholder="Tìm kiếm...">
                                <button onclick="search()" id="btnsearch" name="Name" type="submit"><i style="padding-right:7px; color: rgb(255, 0, 200); font-size: 24px;" class="fa fa-search"></i></button>
                            }
                        </div>
                        <script>
                            function search() {
                                document.getElementById("btnsearch").style.border = "none";
                                $('form#mg3').submit();
                            }
                        </script>
                    </li>

                    <li class="menu-li active" onclick="click('main_product',this)">
                        @Html.ActionLink("Sản phẩm", "Index", "AnSPnSL", null, new { @class = "menu-item menu-product" })
                    </li>

                    <li class="menu-li" onclick="click('login',this)">
                        @if (Session["tennd"] != null)
                        {
                            <a class="user_login1" href="@Url.Action("History", "GioHangKHs")">@Session["tennd"]</a>
                            <div class="user_login">
                                <div class="btn_login">  @Html.ActionLink("Hồ sơ khách hàng", "History", "GioHangKHs", null, new { @class = "menu-item menu-product" })</div>
                                <div class="btn_login">  @Html.ActionLink("Đăng xuất", "LogOut", "Login", null, new { @class = "menu-item menu-product" })</div>
                            </div>
                        }
                        else
                        {
                            string rrr = Request.Url.AbsoluteUri;
                            if(Request.Headers["X-Forwarded-Proto"] != null)
                            {
                                rrr = rrr.Insert(4, Request.Headers["X-Forwarded-Proto"]);
                            }
                            @Html.ActionLink("Tài khoản", "Index", "Login", new { returnurl = rrr }, new { @class = "menu-item menu-product" })
                            <div class="user_login">
                                <div class="btn_login">  @Html.ActionLink("Đăng nhập", "Index", "Login", new { returnurl = rrr }, new { @class = "menu-item menu-product" })</div>
                                <div class="btn_login">  @Html.ActionLink("Đăng ký", "DangKy", "DangKy", null, new { @class = "btn_login_bottom" })</div>
                            </div>
                        }
                    </li>

                    <li class="menu-li" onclick="click('shopping-cart',this)"> @Html.ActionLink("Giỏ hàng", "Index", "GioHangKHs", null, null)</li>


                </ul>
                <script>
                    function click(type, element) {
                        let li = document.getElementsByClassName('menu-li');
                        for (i = 0; i < li.length; i++) {
                            li[i].style.background = 'blue';
                        }
                        element.style.background = 'red';

                    }
                </script>
            </div>
        </div>

    </div>

    @RenderBody()
    <!--Footer-->

<footer class="footer">

    <div class="ft_link">
        <span>Sản phẩm</span>

        <p class="c" style="margin-top: 40px;">Thời trang công sở</p>
        <p class="c">Thời trang trẻ em</p>
