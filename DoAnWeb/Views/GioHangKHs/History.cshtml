@model DoAnWeb.ViewModels.TTnTK
@{
    ViewBag.Title = "History";
}
<html>
<head>
    <style>
        .table {
            width: 89%;
            margin-bottom: 1rem;
            color: #212529;
            margin: auto;
        }

            .table td, .table th {
                padding: .75rem;
                vertical-align: top;
                border-top: 1px solid #dee2e6;
                padding: 15px 0px;
                text-align: center;
            }

        td a {
            color: black;
            padding: 0px;
        }

            td a:hover {
                color: blueviolet;
            }

        #adress {
            max-width: 270px;
        }

        .info-user {
            padding: 120px 80px;
            display: flex;
        }

        .list-info {
            flex: 1;
        }

        .info {
            flex: 4;
            border: 1px solid #c2c2c2;
        }

        #avt {
            width: 50px;
            height: 50px;
            border-radius: 50px;
        }

        .img {
            border-bottom: 1px solid blue;
            padding-bottom: 20px;
            width: 210px;
        }

        .left {
            margin-left: 17px;
        }

        svg.svg-inline--fa.fa-user.fa-w-14 {
            color: royalblue;
        }

        .aaa {
            color: black;
        }

            .aaa:hover {
                color: blue;
            }

        label {
            padding: 5px 5px;
        }

        table {
            margin: 25px 80px;
        }

        input[type="text"] {
            height: 36px;
            width: 180%;
        }

        td {
            padding-bottom: 25px;
        }

        .bbbb {
            font-size: 21px;
            padding-bottom: 21px;
            margin: 18px 80px;
            border-bottom: 1px solid #c2c2c2;
        }

        .td {
            padding-left: 45px;
        }

        input[type="file"] {
            width: 102px;
            margin-left: 87px;
        }


        .tab {
            overflow: hidden;
            background-color: white;
            height: 100px;
            border-bottom: 1px solid #d5d4d4;
        }


            .tab button {
                background-color: inherit;
                float: left;
                border: none;
                outline: none;
                cursor: pointer;
                padding: 14px 16px;
                transition: 0.3s;
                font-size: 17px;
            }

                .tab button.active {
                    background-color: #cc00ff;
                    color: white;
                    background-color: #4646fe;
                    border-bottom: 1px solid blue;
                }

        #Info {
            display: block;
            border: none;
        }

        .tabcontent {
            display: none;
        }

        #Offline {
            display: block;
        }

        button.aa {
            border: none;
            background: white;
            margin-top: 15px;
            text-align: left;
            margin-left: 33px;
            width: auto;
            height: 34px;
        }

            button.aa.active {
                border: 1px solid blue;
                background: white;
                margin-top: 15px;
                text-align: left;
                margin-left: 33px;
                width: 150px;
                height: 34px;
            }

        div#Password, #confirmed, #DaChuyen, #DaHuy, #DaMua, #DangChuyen, #DangLay, #unconfimred {
            margin-left: 30px;
            width: 100%;
            padding-bottom: 70px;
        }

        input[type="password"] {
            height: 37px;
            width: 180%;
        }

        .delete {
            background-color: #ff0000;
            height: 37px;
            border: 1px solid red;
            color: white;
            width: 152px;
            border-radius: 5px;
        }

        .btn-primary {
            margin-top: -3px;
        }

        img {
            width: 70px;
        }

        button.click {
            height: 37px;
            width: 110px;
            border: 1px solid blue;
            background-color: white;
            margin: 7px 55px;
        }

        div#unconfimredd {
            flex: 3;
            border: 1px solid #dbdbdb;
        }

        .edit_img {
            flex: 1;
            border-left: 1px solid #dee2e6;
            height: 190px;
            margin-top: 34px;
            width: 200px;
        }

        #img {
            width: 90px;
            height: 90px;
            margin: 16px 64px;
            border-radius: 50px;
        }

        .btn-primary {
            width: 160px;
            padding: 0px;
            height: 38px;
            margin-top: -1px;
        }
    </style>
</head>
<body>

    <div class="info-user">
        <div class="list-info">
            <div class="img">
                <img id="avt" src="~/Assets/images/user1.jpg" />
                <span style="font-size: 18px;">@Model.tk.TenDN</span>
            </div>
            @{Html.RenderPartial("_TrangThai", Model.tt);}

        </div>
        <div class="tabcontentt" id="unconfimredd">
            <div id="hds">
                @{Html.RenderPartial("_ThongTinKH", Model.tk);}
            </div>
        </div>
        </div>
</body>
</html>