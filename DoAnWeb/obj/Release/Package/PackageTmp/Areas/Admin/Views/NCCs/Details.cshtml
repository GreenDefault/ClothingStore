@model DoAnWeb.Areas.Admin.Models.NCC

@{
    ViewBag.Title = "Details";
}

<h3 style="margin:30px 0px;">Chi tiết</h3>
<html>
<head>
    <style>
        .body-wrapper .main-wrapper .page-wrapper {
            background: #e9eaef;
            margin-left: 170px;
        }

        table tr th {
            padding: 20px 100px 20px 0px;
        }
    </style>
</head>
<body>
    <div>
        <hr />
        <table class="dl-horizontal">
            <tr>
                <th>Tên nhà cung cấp</th>
                <th>
                    Địa chỉ
                </th>
                <th>
                    Số điện thoại
                </th>
                <th>
                    Email
                </th>

            </tr>
            <tr>
                <td> @Html.DisplayFor(model => model.TenNCC)</td>
                <td>
                    @Html.DisplayFor(model => model.DiaChi)
                </td>
                <td>
                    @Html.DisplayFor(model => model.SDT)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Email)
                </td>
            </tr>
        </table>
    </div>
    <p>
        <div style="display:flex;padding:20px 0px;">
            <div class="form-group" style="flex:1;">
                <div class="col-md-offset-2 col-md-10">
                    @Html.ActionLink("Sửa", "Edit", new { id = Model.MaNCC })
                </div>
            </div>
            <div style="flex:1;text-align:center;margin-top:30px;">
                @Html.ActionLink("Trở về", "Index")
            </div>
        </div>
    </p>

</body>
</html>
