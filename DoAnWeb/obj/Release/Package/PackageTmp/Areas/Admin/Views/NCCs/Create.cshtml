@model DoAnWeb.Areas.Admin.Models.NCC

@{
    ViewBag.Title = "Create";
}

<h3 style="margin:34px 165px;">Tạo mới</h3>
<html>
<head>
    <style>
        .col-md-10 {
            margin: 15px 0px;
        }

        .form-horizontal {
            margin-left: 47px;
        }

        .form-group {
            font-size: 17px;
        }

        .form-control {
            width: 730px;
            height: 24px;
        }

        .btn btn-default {
            width: 50px;
            height: 24px;
        }

        input.btn.btn-default {
            height: 35px;
            width: 119px;
            background: #405ffb;
            border: none;
            font-size: 15px;
            color: white;
            margin-top: 5px;
        }
    </style>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div style="margin-top:40px;margin-left:120px;">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                Tên nhà cung cấp
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenNCC, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenNCC, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Địa chỉ
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Số điện thoại
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Email
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div style="display:flex;">
                <div class="form-group" style="flex:1;">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Tạo mới" class="btn btn-default" />
                    </div>
                </div>
                <div style="flex:1;text-align:center;margin-top:30px;">
                    @Html.ActionLink("Trở về", "Index")
                </div>
            </div>
        </div>
    </div>
    }



</body>
</html>

