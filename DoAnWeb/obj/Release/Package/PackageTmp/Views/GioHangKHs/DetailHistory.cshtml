@model IEnumerable<DoAnWeb.Areas.Admin.Models.CT_HoaDon>
@{
    ViewBag.Title = "CHi tiết đơn hàng";
}
<html>
<head>
    <style>
        table {
            padding: 40px;
        }

        td a {
            color: black;
        }

        .detail {
            text-align: center;
            font-size: 24px;
            margin-bottom: 25px;
        }
        p {
            white-space: nowrap;
            width: 140px;
            overflow: hidden;
            text-overflow: ellipsis;
        }
    </style>
</head>
<body>
    <div style="padding:100px 75px 240px 75px;">
        <div class="detail">
            Chi tiết đơn hàng 
        </div>
        <table class="table">
            <tbody>
                <tr>
                    <td></td>
                    <td>
                        Tên Sản Phẩm
                    </td>
                    <td>
                        Màu
                    </td>
                    <td>
                        Size
                    </td>
                    <td>
                        Đơn Giá
                    </td>
                    <td>
                        Số Lượng
                    </td>
                    <td>
                        Thành Tiền
                    </td>
                    <td>
                        Đ/c giao hàng
                    </td>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        @foreach (var temi in item.SanPham.AnhSPs)
                        {
                            if (temi.MaMau == item.MaMau)
                            {
                                <th><img style="width:40px;height:50px;" src="@Url.Content("~/Assets/images/" + temi.Anh)" /></th>
                                break;
                            }

                        }
                        <th>
                            <p>@item.SanPham.TenSP</p>
                        </th>
                        <th>
                            @item.Mau.TenMau
                        </th>
                        <th>
                            @item.Size.TenSize
                        </th>
                        <th>
                            @item.SanPham.DonGia
                        </th>
                        <th>
                            @item.SoLuong
                        </th>
                        <th>
                            @item.ThanhTien
                        </th>
                        <th>
                            Địa chỉ
                        </th>

                    </tr>

                }
            </tbody>
        </table>
    </div>
</body>
</html>